source 'https://rubygems.org'

gem 'capybara'                #The web ui automation framework
gem 'cucumber'                #The acceptance test presentation framework
gem 'pry'                     #A neat debugging tool
gem 'pry-nav'                 #See the .pryrc file - this enables abbreviated commands in the pry console
gem 'rspec-expectations'      #The assertion library that we'll use in our Cucumber step definitions
gem 'selenium-webdriver'      #The driver that Capybara will use to drive the Firefox browser
gem 'site_prism'              #The page-object framework of choice for Capybara
